---
const links = [
  { text: "Writing", path: "/" },
  { text: "About", path: "/about" },
];
---

<nav class="absolute top-4 right-4 md:right-20 md:border-r">
  <ul class="list-none m-0 flex flex-col">
    {
      links.map((link) => (
        <li class="inline p-0">
          <a
            href={link.path}
            class={`pr-4 lowercase dark:text-[#8A938C] ${
              Astro.url.pathname === link.path ? "font-bold" : ""
            }`}
          >
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
